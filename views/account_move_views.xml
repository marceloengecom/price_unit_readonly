<?xml version="1.0"?>
<odoo>
    <data>
        <!-- define the field "price_unit" to readonly on the account_move (invoice)-->
        <record id="view_move_form_price_readonly_inherit" model="ir.ui.view">
            <field name="name">account.move.form.inherit.readonly</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>            
            <field name="groups_id"
                   eval="[(6, 0, [ref('price_readonly.group_price_readonly_invoice') ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='price_unit']"
                       position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
