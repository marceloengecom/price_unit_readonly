<?xml version="1.0"?>
<odoo>
    <data>
        <!-- define the field "price_unit" to readonly on the sales-->
        <record id="view_order_form_price_readonly_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.readonly</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="groups_id"
                   eval="[(6, 0, [ref('price_readonly.group_price_readonly_sales') ])]"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']"
                       position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
